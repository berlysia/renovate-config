{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":assignee(berlysia)",
    ":automergeLinters",
    ":automergeMinor",
    ":automergeTypes",
    ":ignoreModulesAndTests",
    ":label(renovate)",
    ":maintainLockFilesMonthly",
    ":rebaseStalePrs",
    ":timezone(Asia/Tokyo)",
    ":pinAllExceptPeerDependencies",
    "group:allNonMajor",
    "group:definitelyTyped",
    "group:linters",
    "group:monorepos",
    "schedule:weekly"
  ],
  "vulnerabilityAlerts": {
    "enabled": true,
    "labels": ["security"]
  },
  "osvVulnerabilityAlerts": true,
  "packageRules": [
    {
      "matchDatasources": ["npm"],
      "minimumReleaseAge": "7 days"
    },
    {
      "matchDatasources": ["github-tags"],
      "matchManagers": ["github-actions"],
      "pinDigests": true,
      "commitMessageExtra": "to {{newVersion}}"
    },
    {
      "description": "Separate GitHub Actions updates to avoid OIDC workflow validation issues",
      "matchManagers": ["github-actions"],
      "groupName": "GitHub Actions",
      "excludeFromGroupNames": ["all non-major dependencies"]
    }
  ],
  "internalChecksFilter": "strict"
}
