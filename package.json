{
  "name": "@berlysia/renovate-config",
  "version": "0.0.2",
  "description": "renovate config for myself",
  "author": "berlysia <berlysia@gmail.com>",
  "license": "MIT",
  "scripts": {
    "format": "prettier --write '**/*.{json,md}'",
    "test": "renovate-config-validator"
  },
  "devDependencies": {
    "prettier": "3.6.2",
    "renovate": "41.127.1"
  },
  "renovate-config": {
    "default": {
      "extends": [
        "config:base",
        ":assignee(berlysia)",
        ":automergeLinters",
        ":automergeMinor",
        ":automergeTypes",
        ":ignoreModulesAndTests",
        ":label(renovate)",
        ":maintainLockFilesMonthly",
        ":rebaseStalePrs",
        ":timezone(Asia/Tokyo)",
        ":pinAllExceptPeerDependencies",
        "group:allNonMajor",
        "group:definitelyTyped",
        "group:linters",
        "group:monorepos",
        "schedule:weekly"
      ],
      "vulnerabilityAlerts": {
        "enabled": true,
        "labels": [
          "security"
        ]
      },
      "osvVulnerabilityAlerts": true,
      "packageRules": [
        {
          "matchDatasources": [
            "npm"
          ],
          "minimumReleaseAge": "7 days"
        }
      ],
      "internalChecksFilter": "strict"
    }
  }
}
