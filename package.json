{
  "name": "@berlysia/renovate-config",
  "version": "0.0.2",
  "description": "renovate config for myself",
  "author": "berlysia <berlysia@gmail.com>",
  "license": "MIT",
  "scripts": {
    "format": "prettier --write '**/*.{json,md}'",
    "test": "renovate-config-validator"
  },
  "devDependencies": {
    "prettier": "2.5.1",
    "renovate": "31.68.3"
  },
  "renovate-config": {
    "default": {
      "extends": [
        "config:base",
        ":assignee(berlysia)",
        ":automergeLinters",
        ":automergeMinor",
        ":automergeTypes",
        ":ignoreModulesAndTests",
        ":label(renovate)",
        ":maintainLockFilesMonthly",
        ":rebaseStalePrs",
        ":timezone(Asia/Tokyo)",
        ":pinAllExceptPeerDependencies",
        "group:allNonMajor",
        "group:definitelyTyped",
        "group:linters",
        "group:monorepos",
        "schedule:weekly"
      ]
    }
  }
}
